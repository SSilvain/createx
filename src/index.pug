meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible" content="IE=edge")
meta(name="viewport" content="width=device-width, initial-scale=1.0")
title Home Page

.wrapper
	header.header
		.header__container
			img.header__logo(src="@img/logo.svg", alt="logo")
				
			.header__menu.menu

				nav.menu__body
					ul.menu__list
						- var i = 0
						while i<5
							li.menu__item
								a.menu__link(href="#")= ["About Us","Services","Work","News","Contacts"][i++]
			.header__contacts.contacts-header
				.contacts-header__item
					.contacts-header__ico
						a(href="tel:4055550128")
							img(src="@img/contacts-ico-phone.svg", alt="contscts")
					.contacts-header__body
						.contacts-header__title Call us
						a.contacts-header__contact(href="tel:4055550128") (405) 555-0128
				.contacts-header__item
					.contacts-header__ico
						a(href="mailto:hello@createx.com")
							img(src="@img/contacts-ico-chat.svg", alt="contscts")
					.contacts-header__body
						.contacts-header__title Talk to us
						a.contacts-header__contact(href="mailto:hello@createx.com") hello@createx.com
			button.menu__icon.icon-menu(type="button")
				span

	main.page
		.hero
			button.swiper-button-prev(type="button") <
			button.swiper-button-next(type="button") >
			.hero__slider.swiper
				.hero__wrapper.swiper-wrapper
					.hero__slide.swiper-slide
						img.hero__img-bg(src="@img/hero-slider/hero-slider-bg-1.jpg", alt="hero slide")
						.hero__container
							.hero__title CREATE<span>X</span> CONSTRUCTION
							.hero__sub-title Cras ultrices leo vitae non viverra. Fringilla nisi quisque consequat, dignissim vitae proin ipsum sed. Pellentesque nec turpis purus eget pellentesque integer ipsum elementum felis.
							.hero__buttons
								button.hero__button.hero__button-lite(type="button") Learn more about us
								button.hero__button(type="button") SUBMIT REQUEST
					.swiper-pagination
					.swiper-scrollbar
		.values
			.values__container
				h2.values__title Our core values
				h3.values__sub-title Our mission is to set the highest standards for construction sphere.
				.values__body
					each item, i in ["1", "2", "3"]
						.values__item
							img.values__ico(src=["@img/values-ico-1.svg","@img/values-ico-2.svg","@img/values-ico-3.svg",][i])
							h3.values__title-item= ["Quality","Safety","Comfort"][i]
							p.values__text-item= ["Culpa nostrud commodo ea consequat aliquip reprehenderit. Veniam velit nostrud aliquip sunt.","Anim reprehenderit sint voluptate exercitation adipisicing laborum adipisicing. Minim empor est ea.","Sit veniam aute dolore adipisicing nulla sit culpa. Minim mollit voluptate ullamco proident ea ad."][i]
	footer.footer footer
.pixelperfect